{% extends "_layouts/main" %}

{% block main %}

	<ul class="breadcrumbs">
		<li>
			<a href="./">Home</a>
		</li>
		<li>Drink Styles</li>
		<li>{{ category.title }}</li>
	</ul>
	<div class="full-bleed-header" style="background-size: 100%; height: 200px; background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url(/images/drinks/espresso-shot.jpg); background-repeat: no-repeat, repeat;">
		<div class="page-title text-center">
			<h2 class="logo">
				<sapn class="scripty">{{ category.title }}</span>
			</h2>
			<p class="tagline reverse">{{ category.stylesDescription }}</p>
		</div>
	</div>
	<div class="row">
		<div class="intro large-12 small-12 columns text-center">
			<p>Do you like our styles?</p>
		</div>

		{# Drink Entries #}

		<div class="large-12 small-12 columns">
			<table width="100%">
				<tr>
					<th>Drink Name</th>
					<th>Added to Menu</th>
				</tr>

				{% for drink in craft.entries.section('drinks').all() %}
					<tr>
						<td>
							<a href="{{ drink.url }}">{{ drink.title }}</a>
						</td>
						<td>{{drink.postDate | date('M Y')}}</td>
					</tr>
				{% endfor %}
			</table>
		</div>

		{# end Drink entries #}

		<div class="large-12 small-12 columns">
			<table width="100%">
				<tr>
					<th>Recipe Name</th>
					<th>Added to Menu</th>
				</tr>

				 {% for recipe in craft.entries.section('recipes').all() %}
					<tr>

						<td>
							<a href="{{ recipe.url }}">{{ recipe.title }}</a>
						</td>
						<td>{{recipe.postDate | date('M Y')}}</td>
					</tr>
				{% endfor %} 
			</table>
		</div>

	</div>

{% endblock %}
